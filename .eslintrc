{
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "root": true,
  "env": {
    "node": true,
    "mocha": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "rules": {
    "strict": "off",
    "no-console": "warn"
  }
}
